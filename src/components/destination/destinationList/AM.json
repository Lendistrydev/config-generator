[
  {
    "title": "Connection Settings",
    "fields": [
      {
        "type": "textInput",
        "label": "API Key",
        "value": "apiKey",
        "regex": ".*",
        "required": true,
        "placeholder": "e.g: bSjsdGYsOo9sjw23Shj",
        "secret": true
      }
    ]
  },
  {
    "title": "Group Settings",
    "fields": [
      {
        "type": "textInput",
        "label": "Group Name Trait",
        "value": "groupTypeTrait",
        "required": false,
        "placeholder": "e.g: company_id"
      },
      {
        "type": "textInput",
        "label": "Group Value Trait",
        "value": "groupValueTrait",
        "required": false,
        "placeholder": "e.g: company_name"
      }
    ]
  },
  {
    "title": "Track Pages",
    "sectionNote": "(Note: Currently these settings are only applicable for web device mode)",
    "fields": [
      {
        "type": "checkbox",
        "label": "Track all pages",
        "value": "trackAllPages",
        "default": false
      },
      {
        "type": "checkbox",
        "label": "Track Categorized Pages",
        "value": "trackCategorizedPages",
        "default": true
      },
      {
        "type": "checkbox",
        "label": "Track Named Pages",
        "value": "trackNamedPages",
        "default": true
      }
    ]
  },
  {
    "title": "Traits Settings",
    "sectionNote": "(Note: Currently these settings are only applicable for web device mode)",
    "fields": [
      {
        "type": "dynamicCustomForm",
        "value": "traitsToIncrement",
        "label": "Traits to increment",
        "customFields": [
          {
            "type": "textInput",
            "label": "Traits to increment",
            "value": "traits",
            "regex": ".*",
            "required": false
          }
        ]
      },
      {
        "type": "dynamicCustomForm",
        "value": "traitsToSetOnce",
        "label": "Traits to set once",
        "customFields": [
          {
            "type": "textInput",
            "label": "Traits to set once",
            "value": "traits",
            "regex": ".*",
            "required": false
          }
        ]
      }
    ]
  },
  {
    "title": "Other Settings",
    "sectionNote": "(Note: Currently these settings are only applicable for web device mode)",
    "fields": [
      {
        "type": "checkbox",
        "label": "Track products once",
        "value": "trackProductsOnce",
        "required": false,
        "default": false
      },
      {
        "type": "checkbox",
        "label": "Track Revenue per product",
        "value": "trackRevenuePerProduct",
        "required": false,
        "default": false
      },
      {
        "type": "textInput",
        "label": "Version Name",
        "value": "versionName",
        "regex": ".*",
        "required": false,
        "placeholder": "e.g: 1.12.3",
        "secret": false
      }
    ]
  },
  {
    "title": "Batching Events",
    "fields": [
      {
        "type": "checkbox",
        "label": "Batch Events",
        "value": "batchEvents",
        "default": false
      },
      {
        "type": "textInput",
        "label": "Event Upload Period Millis",
        "value": "eventUploadPeriodMillis",
        "required": false,
        "default": 30000,
        "placeholder": 30000
      },
      {
        "type": "textInput",
        "label": "Event Upload Threshold",
        "value": "eventUploadThreshold",
        "required": false,
        "default": 30,
        "placeholder": 30
      }
    ]
  },
  {
    "title": "Native SDK",
    "fields": [
      {
        "type": "checkbox",
        "label": "Use native SDK to send events",
        "value": "useNativeSDK",
        "required": false,
        "default": false
      },
      {
        "type": "checkbox",
        "label": "Prefer Anonymous ID for Device ID",
        "value": "preferAnonymousIdForDeviceId",
        "required": false,
        "default": false
      },
      {
        "type": "checkbox",
        "label": "Set Device ID From URL Parameter amp_device_id",
        "value": "deviceIdFromUrlParam",
        "required": false,
        "default": false
      },
      {
        "type": "checkbox",
        "label": "Force HTTPS",
        "value": "forceHttps",
        "required": false,
        "default": false
      },
      {
        "type": "checkbox",
        "label": "Track GCLID",
        "value": "trackGclid",
        "required": false,
        "default": true
      },
      {
        "type": "checkbox",
        "label": "Track Referrer",
        "value": "trackReferrer",
        "required": false,
        "default": true
      },
      {
        "type": "checkbox",
        "label": "Save Referrer, URL Params, GCLID Once Per Session",
        "value": "saveParamsReferrerOncePerSession",
        "required": false,
        "default": true
      },
      {
        "type": "checkbox",
        "label": "Track UTM properties",
        "value": "trackUtmProperties",
        "required": false,
        "default": true
      },
      {
        "type": "checkbox",
        "label": "Unset Params Referrer On New Session",
        "value": "unsetParamsReferrerOnNewSession",
        "required": false,
        "default": false
      }
    ]
  }
]
