[
  {
    "title": "Connection Settings",
    "fields": [
      {
        "type": "textInput",
        "label": "Account Id",
        "value": "accountId",
        "regex": ".*",
        "required": true,
        "placeholder": "e.g: 81429"
      },
      {
        "type": "textInput",
        "label": "API Key",
        "value": "apiKey",
        "required": true,
        "placeholder": "e.g: 445122be-6544-4369-8871-caab9dca4015"
      }
    ]
  },
  {
    "title": "Native SDK",
    "fields": [
      {
        "type": "defaultCheckbox",
        "label": "Use native SDK to send events",
        "value": "useNativeSDK",
        "default": true
      },
      {
        "type": "checkbox",
        "label": "Send Appcues flow events to all other destinations of this source (Except Appcues)",
        "value": "sendToAll",
        "default": false
      }
    ]
  }
]
